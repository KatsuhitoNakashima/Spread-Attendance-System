<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
   <tr>
      <div class="btn-users-show">
        <td>
          <%= link_to "←", user_path(date: @first_day.prev_month), class: "btn btn-default" %>
          <%= l(@first_day, format: :middle) %>
          <%= link_to "勤怠管理表", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-default" %>
          <%= link_to "→", user_path(date: @first_day.next_month), class: "btn btn-default" %>
        </td>
      <td>指定勤務時間：<%= format_basic_info(@user.work_time) %></td>
      <td>基本時間：<%= format_basic_info(@user.basic_time) %></td>
      <td>初日：<%= l(@first_day, format: :short) %></td>
    </tr>

    <tr>
      <td>所属：<%= @user.department.present? ? @user.department : "未記入" %></td>
      <td>名前：<%= @user.name %></td>
      <td>出勤日数：<%= @worked_sum %>日</td>
      <td>締め：<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th>日付</th>
        <th>曜日</th>
        <th>勤怠</th>
        <th>出勤</th>
        <th>休入</th>
        <th>休戻</th>
        <th>退勤</th>
        <th>勤務時間</th>
        <th colspan="5">備考</th>
      </tr>
    </thead>

    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td><%= $days_of_the_week[day.worked_on.wday] %></td>
          <td>
            <% if btn_text = attendance_state(day) %>
              <%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
          </td>
          <td><%= l(day.started_at, format: :time) if day.started_at.present? %></td>
          <td><%= l(day.rest_in_at, format: :time) if day.rest_in_at.present? %></td>
          <td><%= l(day.rest_out_at, format: :time) if day.rest_out_at.present? %></td>
          <td><%= l(day.finished_at, format: :time) if day.finished_at.present? %></td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_times = working_times(day.started_at, day.finished_at) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
          </td>
          <td><%= day.note %></td>
        </tr>
      <% end %>
    </tbody>

    <tfoot>
      <!--rowspan:縦結合、colspan：横結合-->
      <tr>
        <th>出勤日数</th>
        <th colspan="2">勤務時間</th>
        <td colspan="2">残業時間</td>
        <td colspan="2">深夜残業</td>
        <td colspan="2">早出時間</td>
        
      </tr>
      <tr>
        <th><%= @worked_sum %>日</th>
        <th colspan="2"><%= format("%.2f", @total_working_times.to_f) %> 時間</th>
      </tr>
    </tfoot>    
  </table>
</div>